<!DOCTYPE html>
<html>
  <head>
    <title>TkuP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
      <div class="container">
        
        <%= link_to "TKUC", students_path, class:"navbar-brand" %>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="ナビゲーションの切替">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
            
              <%= link_to "登録", new_student_path, class: "nav-link"  %>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
          <div class="col-md-12">
            <div class="form-inline float-right mb-3">
              <%= search_form_for @search do |f| %>
                <div class="form-group">
                  <%= f.search_field :name_or_lesson_cont, placeholder: "タイトルか本文を検索", class: "form-control" %>
                  <%= f.submit "検索", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
